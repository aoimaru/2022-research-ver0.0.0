[
    {
        "type": "DOCKER-FROM",
        "children": [
            {
                "type": "DOCKER-IMAGE-NAME",
                "value": "ubuntu",
                "children": []
            },
            {
                "type": "DOCKER-IMAGE-TAG",
                "value": "14.04",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-EXPOSE",
        "children": [
            {
                "type": "DOCKER-PORT",
                "value": "8080",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "apt-get update &&     apt-get install -y --no-install-recommends         git         curl         gcc         libc6-dev         libyaml-dev         zlib1g-dev         libssl-dev",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "curl http://dist.crystal-lang.org/apt/setup.sh | sudo bash &&     apt-key adv --keyserver keys.gnupg.net --recv-keys 09617FD37CC06B54 &&     echo \"deb http://dist.crystal-lang.org/apt crystal main\" > /etc/apt/sources.list.d/crystal.list &&     apt-get install -y crystal",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-ADD",
        "children": [
            {
                "type": "DOCKER-ADD-TARGET",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": "/opt/slack-invite",
                        "children": []
                    }
                ]
            },
            {
                "type": "DOCKER-ADD-SOURCE",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": ".",
                        "children": []
                    }
                ]
            }
        ]
    },
    {
        "type": "DOCKER-WORKDIR",
        "children": [
            {
                "type": "DOCKER-PATH",
                "value": "/opt/slack-invite",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "rm -rf libs &&     rm -rf .crystal &&     rm -rf .shards &&     rm -rf bin",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "git config --global http.sslVerify false &&     shards install &&     mkdir -p bin &&     crystal build src/app.cr -o ./bin/slack-invite --release",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "apt-get purge -y git curl gcc &&     apt-get clean -y &&     rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-ENTRYPOINT",
        "children": [
            {
                "type": "DOCKER-ENTRYPOINT-EXECUTABLE",
                "value": "./bin/slack-invite --port 8080",
                "children": []
            }
        ]
    }
]