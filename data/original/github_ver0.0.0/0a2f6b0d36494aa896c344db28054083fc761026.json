    },
    {
        "type": "DOCKER-ENTRYPOINT",
        "children": [
            {
                "type": "DOCKER-ENTRYPOINT-EXECUTABLE",
                "value": "$GOPATH/bin/polyswarm",
                "children": []
            }
        ]
    }
]