[
    {
        "type": "DOCKER-FROM",
        "children": [
            {
                "type": "DOCKER-IMAGE-NAME",
                "value": "perigord",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "set -x &&     apt-get update &&     apt-get -y install         libssl-dev         python         python-pip &&     rm -rf /var/lib/apt/lists/*",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "mkdir -p /go/src/github.com/polyswarm/polyswarm",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-ENV",
        "children": [
            {
                "type": "DOCKER-NAME",
                "value": "GOPATH",
                "children": []
            },
            {
                "type": "DOCKER-LITERAL",
                "value": "/go",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-ADD",
        "children": [
            {
                "type": "DOCKER-ADD-TARGET",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": "/go/src/github.com/polyswarm/polyswarm",
                        "children": []
                    }
                ]
            },
            {
                "type": "DOCKER-ADD-SOURCE",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": ".",
                        "children": []
                    }
                ]
            }
        ]
    },
    {
        "type": "DOCKER-ADD",
        "children": [
            {
                "type": "DOCKER-ADD-TARGET",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": "/keystore",
                        "children": []
                    }
                ]
            },
            {
                "type": "DOCKER-ADD-SOURCE",
                "children": [
                    {
                        "type": "DOCKER-PATH",
                        "value": "/scripts/keystore",
                        "children": []
                    }
                ]
            }
        ]
    },
    {
        "type": "DOCKER-WORKDIR",
        "children": [
            {
                "type": "DOCKER-PATH",
                "value": "/go/src/github.com/polyswarm/polyswarm",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-RUN",
        "children": [
            {
                "type": "MAYBE-BASH",
                "value": "set -x &&     mv perigord-docker.yaml perigord.yaml &&     perigord build &&     go get . &&     go install",
                "children": []
            }
        ]
    },
    {
        "type": "DOCKER-EXPOSE",
        "children": [
